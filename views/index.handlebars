{{!--Here, I am creating the ID  of the section for available, where the burgers that are available and are not devoured will reside. --}}

<div id="available">
    <h2>Available Burgers</h2>
    <ol>
        {{#each burgers}}
            {{!--Here, we are stating that if the burger is not devoured, it will populate here. --}}
            {{#unless this.devoured}}
                <li class="availableList">{{this.burger_name}}
                    {{!--Here, we are creating a form action that will have a button that will make the button devoured when it is clicked on. --}}
                    <form action="/?_method=PUT" method="POST" class="devouredButton">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit" class="btn btn-primary">Devour!</button>
                    </form>
                </li>
            {{/unless}}
        {{/each}}
    </ol>
</div>


<div id="devoured">
    <h2>Devoured Burgers</h2>
    <ol>
        {{#each burgers}}
            {{#if this.devoured}}
                <li class="devouredList">
                    {{this.burger_name}}
                </li>
            {{/if}}
        {{/each}}
    </ol>
</div>

<div id="newBurger">
    <h2>Add a Burger!</h2>
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <label for="burgerInput">Burger Name: </label>
                <input type="text" id="burgerInput" name="burger_name">
            </div>

            <button id="burgerSubmitButton" type="submit" class="btn btn-primary-outline">Add Your Burger!</button>
        
        </form>
</div>
